set -o errexit

usage() {
  local exitval=${1-1}
  cat >&2 << USAGE
usage:
  $0 <options>
    --server-port <port>  [required] the port on which the server should bind
    --with-proxify        if running inside AWS Nitro enclave, set this
USAGE
  exit ${exitval}
}

while [[ $# -gt 0 ]]; do
  case "$1" in
    --server-port)
      if [[ $2 -lt 128 ]]; then
        printf "Invalid port: $2\n" >&2
        usage
      fi
      SERVER_PORT=$2
      shift 2
      ;;
    --with-proxify)
      PROXY=/server/bin/proxify
      shift
      ;;
    -h | --help)
      usage 0
      break
      ;;
    *)
      usage
      break
      ;;
  esac
done

if [[ -z "$SERVER_PORT" ]]; then
  usage
fi

# Start the server first.
$PROXY /server/bin/server --port=${SERVER_PORT} &

# Start Envoy proxy
/usr/local/bin/envoy --config-path /etc/envoy/envoy.yaml -l warn
